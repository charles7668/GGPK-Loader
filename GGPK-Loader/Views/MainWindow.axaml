<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GGPK_Loader.ViewModels"
        xmlns:models="using:GGPK_Loader.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GGPK_Loader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GGPK_Loader">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="5">
            <Button Content="{Binding ButtonText}" Command="{Binding OpenGgpkFileCommand}" />
            <Button Content="Download Tree Info" Command="{Binding DownloadTreeStructureCommand}" />
            <TextBox Width="200" Text="{Binding SearchText}" Watermark="Search..." />
            <CheckBox Content="Regex" IsChecked="{Binding UseRegex}" VerticalAlignment="Center" />
            <CheckBox Content="Match Case" IsChecked="{Binding MatchCase}" VerticalAlignment="Center" />
            <Button Content="Search" Command="{Binding SearchCommand}" />
        </StackPanel>
        <Grid Grid.Row="1" ColumnDefinitions="*, 4, *, 4, *">
            <Grid Grid.Column="0" RowDefinitions="*, Auto">
                <TreeView Grid.Row="0" ItemsSource="{Binding GgpkNodes}" SelectedItem="{Binding SelectedNode}">
                    <TreeView.Styles>
                        <Style Selector="TreeViewItem">
                            <Setter Property="IsExpanded"
                                    Value="{Binding IsExpanded, Mode=TwoWay, DataType=models:GGPKTreeNode}" />
                            <Setter Property="IsSelected"
                                    Value="{Binding IsSelected, Mode=TwoWay, DataType=models:GGPKTreeNode}" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                        </Style>
                    </TreeView.Styles>
                    <TreeView.ItemTemplate>
                        <TreeDataTemplate ItemsSource="{Binding Children}">
                            <Grid Background="Transparent">
                                <TextBlock Text="{Binding Name}">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Export"
                                                      Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ExportCommand}"
                                                      CommandParameter="{Binding}" />
                                            <MenuItem Header="Copy Path"
                                                      Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CopyPathCommand}"
                                                      CommandParameter="{Binding}" />
                                            <MenuItem Header="Replace"
                                                      Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ReplaceCommand}"
                                                      CommandParameter="{Binding}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                            </Grid>
                        </TreeDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <Panel Grid.Row="1" Height="150" IsVisible="{Binding HasGgpkSearchResults}">
                    <ListBox ItemsSource="{Binding GgpkSearchResults}"
                             SelectedItem="{Binding SelectedGgpkSearchResult}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" ToolTip.Tip="{Binding FullPath}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="X" Command="{Binding CloseGgpkSearchResultsCommand}" HorizontalAlignment="Right"
                            VerticalAlignment="Top" Margin="5" Padding="5,0" />
                </Panel>
            </Grid>
            <GridSplitter Grid.Column="1" Background="LightGray" ResizeDirection="Columns" />

            <Grid Grid.Column="2" RowDefinitions="*, Auto">
                <TreeView Grid.Row="0" ItemsSource="{Binding BundleTreeItems}"
                          SelectedItem="{Binding SelectedBundleInfoNode}">
                    <TreeView.Styles>
                        <Style Selector="TreeViewItem">
                            <Setter Property="IsExpanded"
                                    Value="{Binding IsExpanded, Mode=TwoWay, DataType=models:GGPKTreeNode}" />
                            <Setter Property="IsSelected"
                                    Value="{Binding IsSelected, Mode=TwoWay, DataType=models:GGPKTreeNode}" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                        </Style>
                    </TreeView.Styles>
                    <TreeView.ItemTemplate>
                        <TreeDataTemplate ItemsSource="{Binding Children}">
                            <Grid Background="Transparent">
                                <TextBlock Text="{Binding Value}" />
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Export"
                                                  Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ExportCommand}"
                                                  CommandParameter="{Binding}" />
                                        <MenuItem Header="Copy Path"
                                                  Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CopyPathCommand}"
                                                  CommandParameter="{Binding}" />
                                        <MenuItem Header="Replace"
                                                  Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ReplaceBundleFileCommand}"
                                                  CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </Grid.ContextMenu>
                            </Grid>
                        </TreeDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <Panel Grid.Row="1" Height="150" IsVisible="{Binding HasBundleSearchResults}">
                    <ListBox ItemsSource="{Binding BundleSearchResults}"
                             SelectedItem="{Binding SelectedBundleSearchResult}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" ToolTip.Tip="{Binding FullPath}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="X" Command="{Binding CloseBundleSearchResultsCommand}" HorizontalAlignment="Right"
                            VerticalAlignment="Top" Margin="5" Padding="5,0" />
                </Panel>
            </Grid>
            <GridSplitter Grid.Column="3" Background="LightGray" ResizeDirection="Columns" />

            <Panel Grid.Column="4">
                <TextBox Text="{Binding NodeInfoText}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         IsVisible="{Binding IsInfoTextVisible}" />
                <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *" IsVisible="{Binding IsDatViewVisible}">

                    <!-- Top Left: Row Header Title -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#252526" BorderBrush="#3F3F46"
                            BorderThickness="0,0,1,1">
                        <TextBlock Text="Row" FontWeight="Bold" Margin="4,4" Width="50" TextAlignment="Right"
                                   Foreground="#CCCCCC" />
                    </Border>

                    <!-- Top Right: Column Headers (Horizontal Scroll Only) -->
                    <Border Grid.Row="0" Grid.Column="1" Background="#252526" BorderBrush="#3F3F46"
                            BorderThickness="0,0,0,1">
                        <ScrollViewer x:Name="HeaderScrollViewer"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Disabled">
                            <TextBlock Text="{Binding DatInfoSource.ColumnHeaders}"
                                       FontFamily="Consolas, Monospace"
                                       FontSize="14"
                                       Foreground="#CCCCCC"
                                       Margin="4,4" />
                        </ScrollViewer>
                    </Border>

                    <!-- Bottom Left: Row Indices (Synced Vertical Scroll) -->
                    <ListBox Grid.Row="1" Grid.Column="0"
                             x:Name="IndexListBox"
                             ItemsSource="{Binding DatInfoSource.Rows}"
                             ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="#252526"
                             Padding="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="20" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Index, StringFormat='\{0:D\}'}"
                                           Width="50"
                                           FontWeight="Bold"
                                           TextAlignment="Right"
                                           FontSize="14"
                                           Foreground="#858585"
                                           Margin="4,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Bottom Right: Data Cells (Main Scroll) -->
                    <ListBox Grid.Row="1" Grid.Column="1"
                             x:Name="DataListBox"
                             ItemsSource="{Binding DatInfoSource.Rows}"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="#1E1E1E"
                             Padding="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="20" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DataText}"
                                           FontFamily="Consolas, Monospace"
                                           FontSize="14"
                                           Foreground="#D4D4D4"
                                           Margin="4,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Image Source="{Binding SelectedImage}" HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsVisible="{Binding SelectedImage, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </Panel>
        </Grid>
    </Grid>

</Window>